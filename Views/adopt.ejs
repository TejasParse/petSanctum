    <!--Search -->
    <div class="container border-bottom">
        <div class="row my-3 d-flex justify-content-center align-items-center">
            <div class="col-lg-11 col-md-10 col-sm-9">
                <div class="search"> <i class="fa fa-search"></i> 
                    <form action="/Adopt" method="get">
                        <input type="text" class="form-control"
                        placeholder="Search by Breed or Pincode" name="search"> <button class="btn text-light" type="submit">Search</button></form> </div>
            </div>
        </div>
    </div>

    <!--Cards 1-->
    <div id="cards1" class="py-4">
        <div class="container">
            <div class="title text-center">
                <h2 class="position-relative d-inline-block"> Adopt a Pet </h2>
            </div>
            <div class="row">
                <div class="d-flex flex-wrap justify-content-center mt-3">
                    <a href="http://localhost:3000/Adopt"> <button type="button" class="btn m-2 text-dark filter-btn"> All </button> </a>
                    <a href="http://localhost:3000/Adopt?type=Dog"> <button type="button" class="btn m-2 text-dark filter-btn"> Dogs </button> </a>
                    <a href="http://localhost:3000/Adopt?type=Cat"> <button type="button" class="btn m-2 text-dark filter-btn"> Cat </button> </a>
                    <a href="http://localhost:3000/Adopt?type=Fish"> <button type="button" class="btn m-2 text-dark filter-btn"> Fish </button> </a>
                    <a href="http://localhost:3000/Adopt?type=Other"> <button type="button" class="btn m-2 text-dark filter-btn"> Others </button> </a>
                    
                </div>
                <div class="container">


                    <div class="row g-3 mt-4">
                        
                        
                        <% for( let index = 0 ; index < animalList.length; index++ ) { %>
                                     
                                <div class="col-md-6 col-lg-3">
                                    <div class="card bg-light h-100">
                                        <div class="card-body text-center">
                                            <div class='square-box'>
                                                <div class='square-content cardImage' id="card12Image" style="background-image: url('<%= animalList[index].imageUrl %>');"></div>
                                            </div>
                                            <h3 class="card-title mb-2 mt-2"> <%= animalList[index]["name"] %>  </h3>
