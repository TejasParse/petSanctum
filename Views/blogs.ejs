<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blogs</title>

    <%- include("partials/imports.ejs") %>

        <link rel="stylesheet" href="StyleSheets/blog.css">
        <link rel="icon" href="../Resources/logos/dog_emoji.png" type="image/x-icon">
</head>

<body>

    <%- include("partials/navbar") %>


        <div class="container mt-3">
            <h1 class="text-center text-white p-2">Pet Sanctum Blogs</h1>
            <hr size="8">

            <h2 class="text-center mt-2 mb-3 bg-white border-dark rounded d-inline-block p-2 text-center">Featured Posts
            </h2>


            <div class="maincontainer">

                <div class="maincard">
                    <div class="card1">
                        <div class="image">
                            <img href="#" src="<%= blogList[0]["imageUrl"] %> ">
                        </div>
                        <div class="content">
                            <h3><%= blogList[0]["title"].substring(0,36)+".."%> </h3>
                            <p>
                                <%= blogList[0]["description"].substring(0,126)+"..." %> 
                                <a href="http://localhost:3000/BlogRead?uid=<%= blogList[0]["_id"] %>">Read More</a>
                            </p>
                        </div>
                    </div>
                </div>

                <div class="maincard">
                    <div class="card1">
                        <div class="image">
                            <img href="#" src="<%= blogList[1]["imageUrl"] %> ">
                        </div>
                        <div class="content">
                            <h3><%= blogList[1]["title"].substring(0,36)+".."  %> </h3>
                            <p>
                                <%= blogList[1]["description"].substring(0,126)+"..." %> 
                                <a href="http://localhost:3000/BlogRead?uid=<%= blogList[1]["_id"]%>">Read More</a>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="maincard">
                    <div class="card1">
                        <div class="image">
                            <img href="#" src="<%= blogList[2]["imageUrl"] %> ">
                        </div>
                        <div class="content">
                            <h3><%= blogList[2]["title"].substring(0,36)+".."  %> </h3>
                            <p>
                                <%= blogList[2]["description"].substring(0,126)+"..." %> 
                                <a href="http://localhost:3000/BlogRead?uid=<%= blogList[2]["_id"] %>">Read More</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>


            <hr size="8" class="mt-4">

            <h2 class="text-center mt-2 mb-3 bg-white border-dark rounded d-inline-block p-2 text-center"
                style="background: rgb(216, 216, 216);" data-aos="slide-up" data-aos-duration="500">Explore Other Posts
            </h2>

            <div class="container-fluid p-0">

                <% for( let index = 3; index < blogList.length; index++ ) { %>
                
                    <div class="row blog pt-4 pb-4 ps-1 mt-4 mb-4 border border-dark" data-aos="flip-up" data-aos-duration="1250">
                        <div class="col-4">
                            <img src="<%= blogList[index]["imageUrl"] %> " alt="Dog" width="100%">
                        </div>
                        <div class="col-8">
                            <h2 class=""> <%= blogList[index]["title"] %> </h2>
                            <p class="">
                                <%= blogList[index]["description"].substring(0,950) + "..."  %>  
                            </p>
                            <a href="http://localhost:3000/BlogRead?uid=<%= blogList[index]["_id"] %> ">
                                <button class="btn btn-primary" style="background-color: rgb(153, 0, 255); border: 0px;">Read More</button>
                            </a>
                        </div>
                    </div>
                <% } %>

            </div>

            <% if (isAdmin && LoginStatus==1) { %>
                <a href="http://localhost:3000/AddBlog"><Button class="btn btn-success mb-3">Add Blog</Button></a>
            <% } %>




        </div>

        <%- include("partials/footer")  %> 


        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
        <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
        <script>
            AOS.init();
        </script>
        <script src="JavaScripts/blog.js"></script>
</body>

</html>